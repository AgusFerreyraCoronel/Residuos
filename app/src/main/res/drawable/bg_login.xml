<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Degradado verde suave -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#025A31"
                android:endColor="#01371E"
                android:angle="90"/>
        </shape>
    </item>

    <!-- Imagen opcional -->
    <item>
        <bitmap
            android:src="@drawable/bg_trees"
            android:gravity="center"
            android:alpha="0.20"/>
    </item>

</layer-list>